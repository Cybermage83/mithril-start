{
  "name": "start",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel security-check open:src lintjs:watch test:watch lintsass:watch start-mockapi",
    "open:src": "nodemon build/srcServer.js --exec babel-node --presets latest",
    "lintjs": "esw 'src/**/*.js'",
    "lintjs:watch": "npm run lintjs -- --watch",
    "prelintsass": "stylefmt --config .stylelintrc --recursive 'src/**/*.css'",
    "lintsass": "stylelint 'src/**/*.css'",
    "lintsass:watch": "npm run lintsass -- --watch",
    "security-check": "nsp check",
    "localtunnel": "lt --port 3000",
    "share": "npm-run-all --parallel open:src localtunnel",
    "test": "babel-node node_modules/.bin/ospec",
    "test:watch": "npm run test -- --watch",
    "cover": "NODE_ENV=test nyc --no-cache ospec",
    "check-coverage": "NODE_ENV=test nyc check-coverage --branches -9",
    "generate-mock-data": "babel-node build/generateMockData",
    "prestart-mockapi": "npm run generate-mock-data",
    "start-mockapi": "json-server --watch src/data/db.json --port 3002",
    "clean-dist": "rimraf ./dist && mkdir dist",
    "prebuild": "npm-run-all clean-dist test lintjs",
    "build": "webpack --config 'webpack.config.prod.js'",
    "postbuild": "babel-node build/distServer.js",
    "deploy": "surge ./dist"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text-summary",
      "html"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://dontwork@github.com/dontwork/start.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dontwork/start/issues"
  },
  "homepage": "https://github.com/dontwork/start#readme",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-istanbul": "^3.1.2",
    "babel-plugin-transform-require-ignore": "0.0.2",
    "babel-preset-latest": "^6.16.0",
    "babel-register": "^6.16.3",
    "babili-webpack-plugin": "0.0.7",
    "browser-sync": "^2.18.6",
    "bs-fullscreen-message": "^1.1.0",
    "chalk": "^1.1.3",
    "compression": "^1.6.2",
    "css-loader": "^0.26.1",
    "css-modules-require-hook": "^4.0.5",
    "eslint": "^3.8.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "eslint-watch": "^2.1.14",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "favicons-webpack-plugin": "0.0.7",
    "html-webpack-plugin": "^2.22.0",
    "isomorphic-style-loader": "^1.1.0",
    "jsdom": "^9.9.1",
    "json-schema-faker": "^0.3.6",
    "json-server": "^0.8.22",
    "localtunnel": "^1.8.1",
    "modular-css": "github:tivac/modular-css#pull/234/head",
    "node-sass": "^4.3.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^3.1.1",
    "nsp": "^2.6.2",
    "nyc": "^10.1.2",
    "open": "0.0.5",
    "ospec": "^1.2.3",
    "resource-hints-webpack-plugin": "0.0.1",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.1.1",
    "strip-ansi": "^3.0.1",
    "style-loader": "^0.13.1",
    "stylefmt": "^5.0.3",
    "stylelint": "^7.7.1",
    "stylelint-config-standard": "^15.0.1",
    "webpack": "^2.1.0-beta.25",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-md5-hash": "^0.0.5"
  },
  "dependencies": {
    "mithril": "^1.0.0-rc.8",
    "mithril-node-render": "^1.0.1-5"
  }
}
